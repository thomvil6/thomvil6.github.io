@article{villemin2022modelisation,
  title={Mod{\'e}lisation du bilan thermique d’un panneau photovolta{\"\i}que par la m{\'e}thode de Monte Carlo et validation exp{\'e}rimentale},
  bibtex_show={true},
  author={Villemin, Thomas and Farges, Olivier and Parent, Gilles and Claverie, R{\'e}my and Bouyer, Julien},
  abbr={Magazine},
  journal={Entropie: thermodynamique--{\'e}nergie--environnement--{\'e}conomie},
  volume={3},
